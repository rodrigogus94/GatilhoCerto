<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textPedidoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Jamilton damasceno"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPedidoEndereco"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Endereço: rua almeida prado, "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textPedidoNumeroCasa"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="N: 1111"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textPedidoTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone: (99)99999-9999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPedidoPgto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pgto: Dinheiro"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPedidoObs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Obs: teste"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPedidoItens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1) Filé Cinco Queijos (1 X R$ 16.50)"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />


        <include layout="@layout/divisor" />


    </LinearLayout>



</androidx.cardview.widget.CardView>
